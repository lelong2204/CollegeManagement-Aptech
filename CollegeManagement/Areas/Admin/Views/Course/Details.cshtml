@model CollegeManagement.Models.Course
@inject DataContext _context

@{
    ViewData["Title"] = "Details";
    var userInfo = (AccountLogin)Context.Items["UserLogin"];
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            Information
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Info)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Evaluate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evaluate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Entry Point
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EntryPoint)
        </dd>
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class = "col-sm-10">
            @_context.Departments.FirstOrDefault(d => d.ID ==Model.DepartmentID && d.Deleted != 1).Name
        </dd>
    </dl>
</div>
<div>
    @if (userInfo.Role != "Faculty")
    {
        <a class="btn btn-warning mr-2" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    }
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
