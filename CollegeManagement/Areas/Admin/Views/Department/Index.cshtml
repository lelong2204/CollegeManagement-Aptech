@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-bordered" id="datatable">
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#datatable').DataTable({
                ajax: {
                    url: '/Admin/Department/List',
                    dataSrc: function (res) {
                        return res.data
                    }
                },
                language: {
                    paginate: {
                        previous: "<",
                        next: ">",
                    }
                },
                columns: [
                    { data: 'name' },
                    { data: 'info' },
                    {
                        data: 'createdAt',
                        render: (data, type, row, meta) => {
                            return `<p>${data ? moment(data).format("DD/MM/YYYY HH:mm:ss") : ""}</p>`
                        }
                    },
                    {
                        data: 'updatedAt',
                        render: (data, type, row, meta) => {
                            return `<p>${data ? moment(data).format("DD/MM/YYYY HH:mm:ss") : ""}</p>`
                        }
                    },
                    {
                        data: 'id',
                        render: (data, type, row, meta) => {
                            return `<div>
                                <a href="/Admin/Department/Edit/${row.id}" class="btn btn-action btn-warning"><i class="fa fa-edit"></i></a>
                                <a href="/Admin/Department/Details/${row.id}" class="btn btn-action btn-info"><i class="fa fa-eye"></i></a>
                                <a href="/Admin/Department/Delete/${row.id}" class="btn btn-action btn-danger"><i class="fa fa-trash"></i></a>
                            </div>`
                        }
                    },
                ],
                columnDefs: [
                    {
                        targets: 0,
                        title: "Name",
                        className: "text-center",
                    },
                    {
                        targets: 1,
                        title: 'Information',
                        className: "td-word_break"
                    },
                    {
                        targets: 2,
                        title: 'Created At',
                        className: "td-word_break"
                    },
                    {
                        targets: 3,
                        title: 'Updated At',
                        className: "td-word_break"
                    },
                    {
                        targets: 4,
                        title: 'Action'
                    }
                ],
                select: {
                    style: 'os',
                    selector: 'td:first-child'
                },
            })
        })
    </script>
}