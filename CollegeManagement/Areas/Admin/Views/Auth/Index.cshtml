@model AuthenticateRequest

@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<form asp-action="Index">
    <span id="error" class="text-danger">@TempData["Error"]</span>
    <div class="form-group position-relative has-icon-left mb-4">
        <input type="text" asp-for="UserName" class="form-control form-control-xl" placeholder="Username">
        <div class="form-control-icon">
            <i class="bi bi-person"></i>
        </div>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group position-relative has-icon-left mb-4">
        <input type="password" asp-for="Password" class="form-control form-control-xl" placeholder="Password">
        <div class="form-control-icon">
            <i class="bi bi-shield-lock"></i>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-check form-check-lg d-flex align-items-end">
        <input class="form-check-input me-2" type="checkbox" value="" id="flexCheckDefault">
        <label class="form-check-label text-gray-600" for="flexCheckDefault">
            Keep me logged in
        </label>
    </div>
    <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Log in</button>
</form>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#UserName , #Password").on("change , keyup", function () {
                $('#error').text("");
            })
        })
    </script>
}