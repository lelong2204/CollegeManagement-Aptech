@model Facility
<div id="overviews" class="section wb">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="background: #cecece">
                    <div class="carousel-inner">
                        @if (Model.FacilityImgs != null && Model.FacilityImgs.Count > 0)
                        {
                            var i = 0;
                            @foreach (var img in Model.FacilityImgs)
                            {
                                if (i == 0)
                                {
                                    i++;

                                    <div class="carousel-item active">
                                        <img src="@img.ImgUrl" style="width: 100%; height: 100%" />
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item">
                                        <img src="@img.ImgUrl" style="width: 100%; height: 100%" />
                                    </div>
                                }
                            }
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" style="background:#555" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" style="background:#555" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <b>Name:</b> @Model.Name<br />
                <b>Quantity:</b> @Model.Qty<br />
                <b>Information:</b> @Model.Info<br />
            </div>
            <div class="col-12 mt-3">
                <a asp-action="Facility" class="btn btn-secondary">Back to list</a>
            </div>
        </div>
    </div>
</div>