@model UserHome
@{
}
<div id="carouselExampleControls" class="carousel slide bs-slider box-slider" data-ride="carousel" data-pause="hover" data-interval="false">
    <!-- Indicators -->
    <div class="carousel-inner" role="listbox">
        @{
            if (Model.Courses != null)
            {
                for (int i = 0; i < Model.Courses.Count; i++)
                {
                    var c = Model.Courses[i];
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <div id="home" class="first-section" 
                                 style="background-image:url('@(string.IsNullOrWhiteSpace(c.ImageURL)? "/admin/assets/images/logo/logo.png": c.ImageURL)');">
                                <div class="dtab">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-12 col-sm-12 text-right">
                                                <div class="big-tagline">
                                                    <h2><strong>@c.Name</strong></h2>
                                                    <p class="lead">@c.Info</p>
                                                    <a href="/Home/Courses/Details/@c.ID" class="hover-btn-new"><span>Read More</span></a>
                                                    @if (c.Status == 1)
                                                    {
                                                        <a href="/Home/Courses/ElectList/@c.ID" class="hover-btn-new"><span>ElectList</span></a>
                                                    }
                                                </div>
                                            </div>
                                        </div><!-- end row -->
                                    </div><!-- end container -->
                                </div>
                            </div><!-- end section -->
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <div id="home" class="first-section" style="background-image:url('@c.ImageURL');">
                                <div class="dtab">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-12 col-sm-12 text-right">
                                                <div class="big-tagline">
                                                    <h2><strong>@c.Name</strong></h2>
                                                    <p class="lead">@c.Info</p>
                                                    <a href="/Home/Courses/Details/@c.ID" class="hover-btn-new"><span>Read More</span></a>
                                                </div>
                                            </div>
                                        </div><!-- end row -->
                                    </div><!-- end container -->
                                </div>
                            </div><!-- end section -->
                        </div>
                    }
                }
            }
            if (Model.Event != null)
            {
                for (int i = 0; i < Model.Event.Count; i++)
                {
                    var c = Model.Event[i];
                    if (i == 0 && (Model.Courses == null || !Model.Courses.Any()))
                    {

                        <div class="carousel-item active">
                            <div id="home" class="first-section" style="background-image:url('/images/slider-01.jpg');">
                                <div class="dtab">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-12 col-sm-12 text-right">
                                                <div class="big-tagline">
                                                    <h2><strong>@c.Title</strong></h2>
                                                    <p class="lead">Read detail click Read more</p>
                                                    <a href="/Home/Blog/Details/@c.ID" class="hover-btn-new"><span>Read More</span></a>
                                                </div>
                                            </div>
                                        </div><!-- end row -->
                                    </div><!-- end container -->
                                </div>
                            </div><!-- end section -->
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <div id="home" class="first-section" style="background-image:url('/images/slider-01.jpg');">
                                <div class="dtab">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-12 col-sm-12 text-right">
                                                <div class="big-tagline">
                                                    <h2><strong>@c.Title</strong></h2>
                                                    <p class="lead">Read detail click Read more</p>
                                                    <a href="/Home/Blog/Details/@c.ID" class="hover-btn-new"><span>Read More</span></a>
                                                </div>
                                            </div>
                                        </div><!-- end row -->
                                    </div><!-- end container -->
                                </div>
                            </div><!-- end section -->
                        </div>
                    }
                }
            }
        }
        <!-- Left Control -->
        <a class="new-effect carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="fa fa-angle-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <!-- Right Control -->
        <a class="new-effect carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="fa fa-angle-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<section class="section lb page-section">
    <div class="container">
        <div class="section-title row text-center">
            <div class="col-md-8 offset-md-2">
                <h3>Our history</h3>
                <p class="lead">the entire history of establishment and development of the college </p>
            </div>
        </div><!-- end title -->
        <div class="timeline">
            <div class="timeline__wrap">
                <div class="timeline__items" onload="LoadTimeLine()">
                    @{
                        if (Model.Histories != null)
                        {
                            foreach (var h in Model.Histories)
                            {
                                <div class="timeline__item">
                                    <div class="timeline__content" style="background-color:#023">
                                        <h2>@h.Year</h2>
                                        <p>
                                            @Html.Raw(h.Description)
                                        </p>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<div class="section cl">
    <div class="container">
        <div class="row text-left stat-wrap">
            <div class="col-md-4 col-sm-4 col-xs-12">
                <span data-scroll class="global-radius icon_wrap effect-1 alignleft"><i class="flaticon-study"></i></span>
                <p class="stat_count">@Model.TotalStudent</p>
                <h3>Students</h3>
            </div><!-- end col -->

            <div class="col-md-4 col-sm-4 col-xs-12">
                <span data-scroll class="global-radius icon_wrap effect-1 alignleft"><i class="flaticon-online"></i></span>
                <p class="stat_count">@Model.TotalCourse</p>
                <h3>Courses</h3>
            </div><!-- end col -->

            <div class="col-md-4 col-sm-4 col-xs-12">
                <span data-scroll class="global-radius icon_wrap effect-1 alignleft"><i class="flaticon-years"></i></span>
                <p class="stat_count">@Model.Year</p>
                <h3>Years Completed</h3>
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->

<div id="testimonials" class="parallax section db parallax-off" style="background-image:url('images/parallax_04.jpg');">
    <div class="container">
        <div class="section-title text-center">
            <h3>Testimonials</h3>
            <p>Lorem ipsum dolor sit aet, consectetur adipisicing lit sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
        </div><!-- end title -->

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="testi-carousel owl-carousel owl-theme">
                    @{
                        if (Model.Faculties != null)
                        {
                            foreach (var f in Model.Faculties)
                            {
                                <div class="testimonial clearfix">
                                    <div class="testi-meta">
                                        <img src="@f.ImageUrl" alt="" class="img-fluid">
                                        <h4>@f.Name</h4>
                                    </div>
                                    <div class="desc">
                                        <h3><i class="fa fa-quote-left"></i> Wonderful Support!</h3>
                                        <p class="lead">@f.Testimonials</p>
                                    </div>
                                    <!-- end testi-meta -->
                                </div>
                            }
                        }
                    }
                </div><!-- end carousel -->
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->

