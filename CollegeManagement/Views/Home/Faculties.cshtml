@model IEnumerable<Faculty>

<div class="all-title-box">
    <div class="container text-center">
        <h1>Faculty List<span class="m_1">Lorem Ipsum dolroin gravida nibh vel velit.</span></h1>
    </div>
</div>

<div id="overviews" class="section wb">
    <div class="container">
        <div class="section-title row text-center">
            <div class="col-md-8 offset-md-2">
                <p class="lead">Lorem Ipsum dolroin gravida nibh vel velit auctor aliquet. Aenean sollicitudin, lorem quis bibendum auctor, nisi elit consequat ipsum, nec sagittis sem!</p>
            </div>
        </div><!-- end title -->

        <hr class="invis">

        <div class="row">

            @{
                if (Model != null)
                {
                    foreach (var m in Model)
                    {
                        <div class="col-lg-3 col-md-6 col-12">
                            <div class="course-item">
                                <div class="image-blog">
                                    <img src="@(m.ImageUrl)" alt="" class="img-fluid">
                                </div>
                                <div class="course-br">
                                    <div class="course-title">
                                        <h2><a href="#" title="">@(m.Name)</a></h2>
                                    </div>
                                    <div class="course-desc">
                                        <p>@(m.Info)</p>
                                    </div>
                                </div>
                                <div class="course-meta-bot">
                                    <ul class="row">
                                        <li class="col-12">Department: @(m.Department.Name)</li>
                                        <li class="col-12">Gender: @(m.Gender == 1?"Male": m.Gender == 0 ? "Female": "Other")</li>
                                        <li class="col-12">Email: @(m.Email)</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->